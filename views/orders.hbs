<title>{{title}}</title>

<h1>Оформить заказ</h1>

{{#if orders.length}}
    {{#each orders}}
        <div class="row">
            <div class="col s6 offset-s3">
                <div class="card">
                    <div class="card-content">
                        <span class="card-title">
                            Заказ: <small>{{_id}}</small>
                        </span>
                        <p class="date">{{date}}</p>
                        <p><em>{{user.userId.name}}</em> ({{user.userId.email}})</p>
                            <ol>
                                {{#each courses}}
                                    <li>{{course.title}} (Количество: <strong>{{count}}</strong>)</li>
                                {{/each}}

                            </ol>
                        <hr>
                        <div class="flex">
                            <p>Цена: <span class="price">{{price}}</span></p>
                            <form action="orders/delete" method="POST">
                                <button class="btn" type="submit">Удалить</button>
                                <input type="hidden" name="_csrf" value="{{@root.csrf}}">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
{{else}}
    <p>Заказов нет</p>
{{/if}}