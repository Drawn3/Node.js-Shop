<h1>Корзина</h1>
<div id="card">
{{#if courses.length}}
<table>
    <thead>
        <tr>
            <td>Название</td>
            <td>Количество</td>
            <td>Действие</td>
        </tr>
    </thead>
    <thread>
        {{#each courses}}
        <tr>
            <td>{{title}}</td>
            <td><button class="btn btn-primary js-minus" >-</button>{{count}}</td>
            <td>
                <button 
                class="btn btn-primary js-remove" 
                data-id="{{id}}"
                data-csrf="{{@root.csrf}}"
                >Удалить
                </button>
            </td>
        </tr>
    </thread>
    {{/each}}
</table>
    <form action="/orders" method="POST">
        <input type="hidden" name="_csrf" value="{{csrf}}">
        <button class="btn" type="submit">Оформить заказ</button>
    </form>
<p><strong>Цена: <span class="price">{{price}}</span></strong></p>
{{else}}
<p>Корзина пуста</p>
{{/if}}
</div>